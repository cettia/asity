<configuration debug="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{mm:ss.SSS} %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="org.eclipse.jetty.util.thread" level="INFO" />
  <logger name="org.eclipse.jetty.util.component" level="INFO" />
  <logger name="org.eclipse.jetty.io" level="INFO" />
  <logger name="org.eclipse.jetty.client.AbstractConnectionPool" level="INFO" />
  <logger name="org.eclipse.jetty.client.HttpDestination" level="INFO" />
  <root>
    <level value="DEBUG" />
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
